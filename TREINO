CSS
/*Integração inicial*/

h1{
    color: rgb(2, 147, 2);
    font-size: 40px;
}

/* Atributo ID */

#other{
    color: rgb(105, 95, 26);
    font-size: 40px;
}

#title{
    color:chocolate;
    font-size: 60px;
    

}

/* Classes */

.text{
    color: darkorchid;
    font-size: 30px;
}

/* Backgroud mudar cor de fundo do paragrafo */

.background{
    background-color: aquamarine;
    color: rgb(40, 8, 245);
    font-size: 45px;
}

/* Dois elementos em uma regra*/

p, .title-small{ 

color: rgb(95, 0, 0);
font-size: 60px;

}

.title-small{
    color: black;
    font-size: 20px;
}

/*Imagem de Fundo/ Backgroud-image*/

.background-image {
    background-image: url("../img/meteoro.jpg");
    color: rgb(133, 133, 161);
    padding: 30px;
    font-size: 30px;
}
/* Largura e Altura*/

#width-height{
    width: 200px;
    height: 100px;
    background-color: aquamarine;
}

/* Padding*/

#padding{
    background-color: rgb(229, 198, 0);
    font-size: 35px;
    padding: 30px;
}

/*Margem*/

#margin{
    width: 200px;
    height: 100px;
    background-color: blueviolet;
    margin: 25px;
}

/* Borda*/

#border{
   border: 6px solid rgb(120, 2, 2);
   font-size: 80px;
   background-color: rgb(120, 2, 2);
   width: 300;
   height: 100;
  margin: 50;
  padding: 30;
}

#border-radius{
    border-radius: 30px;
    font-size: 80px;
    background-color: rgb(120, 2, 2);
    width: 300;
    height: 100;
   margin: 50;
   padding: 30;
   border: 15px dashed black;
   
}

#center {
   text-align: center;
   
}

  

p{
    font-size: 20px;
}

/*Decoration*/

#underline{
    text-decoration: underline;
}

#line{
    text-decoration: line-through;
}

#sem-underline{
    text-decoration: none;
}

/*Transform Maiuscula ou minuscula*/



#upper{
    text-transform: uppercase;
}


#lower{
    text-transform: lowercase;
}














