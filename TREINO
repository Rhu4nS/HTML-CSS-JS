<div id="margin">Testando Margem</div>

<!--Borda-->

<div id="border">Netflix</div>

<!--Arredondar/ raio da Borda-->

<div id="border-radius">Netflix</div>

<!--Alinhamento de texto-->
<div id=center>
<p>Netflix</p>

<!--Decoration-->

<p id="underline">Texto com underline</p>
<p id="line">linha no texto</p>
<a href="sem-underline">Link</a>


<!--Transform-->

<p id="lower">TODO EM CAIXA BAIXA</p>
<P ID="upper">todo em caixa alta</P>


<!--alteração de fonte-->

<p id="serif">Fonte Serifada</p>
<p id="sans-serif">Fonte Sem serifa</p>
<p id="cursive">Fonte Cursiva</p>



